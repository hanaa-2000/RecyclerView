<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape>
        <gradient android:startColor="#F3BBBA" android:endColor="#1B3AD8"/>
        <corners android:radius="24dp" />
        <stroke android:color="#fff" android:dashWidth="1dp"
            android:width="4dp"/>
    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#88A7E4"/>
            <corners android:radius="24dp" />
            <stroke android:color="#090909" android:dashWidth="1dp"
                android:width="4dp"/>
        </shape>
    </item>
</selector>